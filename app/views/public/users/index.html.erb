<div class="main-title">
  <h4><i class="fa-solid fa-users"></i>ユーザ一覧</h4>
</div>

<p>
<%= link_to new_group_path, class: "submit-btn" do %>
  <i class="fa-solid fa-user-plus"></i>グループを作成
<% end %>
<%= link_to groups_path, class: "submit-btn" do %>
  <i class="fa-solid fa-user-group"></i>グループ一覧
<% end %>
</p>

<% @users.each do |user| %>
  <div class="index-results">
    <div class="index-card">
      <div class="index-header">
        <%= link_to user_path(user.id) do %>
          <% if user.image.attached? %>
            <%= image_tag user.image, class: "profile-image", alt: "#{user.name}のプロフィール画像" %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "profile-image", alt: "デフォルトプロフィール画像" %>
          <% end %>
        <% end %>
        <b><%= link_to user.name, user_path(user.id) %></b>
      </div>
    </div>
  </div>
<% end %>

<%= paginate @users %>
