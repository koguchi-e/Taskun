<div class="login-box">
  <div class="main-title">
    <h4><i class="fa-solid fa-right-to-bracket"></i>ログイン</h4>
  </div>

  <div class="detail-results">
    <div class="detail-card">
      <div>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <p>
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
          </p>

          <p>
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを記憶させる %>
            <% end %>
          </p>
          <div class="actions">
            <%= f.submit "ログイン", class: "submit-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <p></p>
  <%= link_to "新規登録", new_registration_path(resource_name) %> | 
  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>
</div>
