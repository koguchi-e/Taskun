<div class="collapse" id="navbarToggleExternalContent" data-bs-theme="dark">
  <div class="p-4">
    <h5 class="text-white h4">
      <%= link_to root_path do %>
        <span class="top-icon">
          <%= image_tag "site-icon.png", alt: "サイトアイコン", width: 40, height: 40 %>
          Taskun.
        </span>
      <% end %>
    </h5>
    <ul class="nav flex-column">
      <li class="nav-item mb-2">
        <%= link_to user_path(current_user.id), class: "nav-link text-white" do %>
          <% if current_user.image.attached? %>
            <%= image_tag current_user.image, class: "profile-image-small" %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "profile-image-small" %>
          <% end %>
          マイページ
        <% end %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to tasks_path, class: "nav-link text-white" do %>
          <i class="fa-solid fa-list-check"></i> タスク一覧
        <% end %>
      </li>
      <li class="nav-item mb-2">
        <%= link_to users_path, class: "nav-link text-white" do %>
          <i class="fa-solid fa-users"></i> ユーザー一覧
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
          <i class="fa-solid fa-right-from-bracket"></i> ログアウト
        <% end %>
      </li>
    </ul>
  </div>
</div>

<nav class="navbar">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>
