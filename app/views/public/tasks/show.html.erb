<div class="main-title">
  <h4><i class="fa-solid fa-check"></i> タスク詳細画面</h4>
</div>

<div class="index-results">
  <div class="index-card">
    <div class="index-header">
      <table>
        <tr>
          <td style="text-align:right; vertical-align: top;">
            <b>タスク名</b>：
          </td>
          <td>
            <%= @task.title %>
            <br>
            <% if @task.user == current_user %>
              <%= link_to "編集", edit_task_path(@task.id) %> | 
              <%= link_to "削除", task_path(@task.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
            <p></p>
          </td>
        </tr>
        <tr>
          <td style="text-align:right; vertical-align: top;">
            <b>投稿したユーザ</b>：
          </td>
          <td>
            <!-- プロフィール画像の表示  -->
            <% if @task.user.image.attached? %>
                <%= image_tag @task.user.image, size: "50x50", alt: "#{@task.user.name}のプロフィール画像" %>
            <% else %>
                <%= image_tag "no_image.jpg", size: "50x50", alt: "デフォルトプロフィール画像" %>
            <% end %>
            <%= @task.user.name %>
          </td>
        </tr>
        <tr>
          <td style="text-align:right; vertical-align: top;">
            <b>キーワード</b>：
          </td>
          <td>
            <%= @task.keyword1 %> / 
            <%= @task.keyword2 %> / 
            <%= @task.keyword3 %>
          </td>
        </tr>
        <tr>
          <td style="text-align:right; vertical-align: top;">
            <b>投稿日時</b>：
          </td>
          <td>
            <%= @task.created_at.in_time_zone('Tokyo').strftime('%m月%d日 %H:%M') %>
          </td>
        </tr>
        <tr>
          <td style="text-align:right; vertical-align: top;">
            <b>更新日時</b>：
          </td>
          <td>
            <%= @task.updated_at.in_time_zone('Tokyo').strftime('%m月%d日 %H:%M') %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<td>
        <div>
        <p>コメント件数：<%= @task.task_comments.count %></p>
        <% @task.task_comments.each do |task| %>
          <p><%= image_tag task_comment.user.get_profile_image(50,50) %></p>
          <%= task_comment.user.name %>
          <%= task_comment.created_at.in_time_zone('Tokyo').strftime('%m月%d日 %H:%M') %><%= task_comment.comment %>
        <% end %>
      </div>

      <div>
        <%= form_with model:[@task, @task_comment] do |f| %>
          <%= f.text_area :comment, row: "5", width: "30", placeholder: "コメントを入力" %>
          <br>
          <%= f.submit "送信する", class: "submit-btn" %>
        <% end %>
      </div>
      </td>
