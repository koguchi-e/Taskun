<h1>ユーザ詳細画面</h1>

<h4>プロフィール画像</h4>
<% if @user.image.attached? %>
    <%= image_tag @user.image, size: "80x80" %>
<% else %>
    <%= image_tag "no_image", size: "80x80" %>
<% end %>

<h4>ユーザ名</h4>
<p><%= @user.name %></p>
<h4>メールアドレス</h4>
<p><%= @user.email %></p>

<%= link_to "編集", edit_user_path(@user.id) %>

