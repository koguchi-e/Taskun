<!DOCTYPE html>
<html>
<head>
  <title>管理者用・Taskun</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <script src="https://kit.fontawesome.com/38dc52f0f7.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="d-flex flex-column vh-100" style="background-color: #e0ffef;">
  <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <li class="navbar-brand p-3">
          <%= link_to "Taskun", root_path %>
        </li>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to admin_dashboards_path do %>
                    <i class="fa-solid fa-users"></i> ユーザ一覧
                  <% end %>
                </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fa-solid fa-right-from-bracket"></i>
                  管理者からログアウト 
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <% if flash[:alert] %>
    <div class="flash-message alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if admin_signed_in? %>
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <p></p>
          <h4>ユーザ・タスク検索</h4>
          <%= form_with url: admin_dashboards_search_path, method: :get, local: true do |f| %>
            <%= f.text_field :user_query, placeholder: "ユーザ名" %>
            <%= f.text_field :task_query, placeholder: "タスク名" %>
            <br>
            <%= f.submit "検索" %>
          <% end %>
        </div>
        <div class="col-lg-8">
          <%= yield %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <%= yield %>
        </div>
      </div>
    </div>
  <% end %>

  <footer>
    <div class='footer'>
      <hr>
      <p>Taskun.</p>
    </div>
  </footer>
</body>
</html>
