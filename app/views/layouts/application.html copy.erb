<!DOCTYPE html>
<html>
  <head>
    <title>Taskun</title>
    <link rel="icon" href="<%= asset_path('site-icon.png') %>">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/38dc52f0f7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <li class="navbar-brand p-3">
            <%= link_to root_path do %>
              <span class="top-icon">
                <%= image_tag "site-icon.png", alt: "サイトアイコン", width: 40, height: 40 %>
                Taskun.
              <span>
            <% end %>
          </li>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <!-- ログイン中ナビゲーション  -->
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to user_path(current_user.id) do %>
                    <i class="fa-solid fa-user"></i> マイページ
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to tasks_path do %>
                    <i class="fa-solid fa-list-check"></i> タスク一覧
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to users_path do %>
                    <i class="fa-solid fa-users"></i> ユーザ一覧
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fa-solid fa-right-from-bracket"></i> ログアウト
                  <% end %>
                </li>

              <!-- ログイン前ナビゲーション  -->
              <% else %>
                <li class="nav-item">
                  <%= link_to about_path do %>
                    <i class="fa-solid fa-list"></i> Taskunとは？
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus"></i> 新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path do %>
                    <i class="fa-solid fa-right-to-bracket"></i> ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!-- ナビゲーション終わり  -->

    <!-- フラッシュメッセージ  -->
    <% if flash[:notice] %>
      <div class="flash-message notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="flash-message alert"><%= flash[:alert] %></div>
    <% end %>
    <p></p>

    <!-- ここからサイドバー -->
    <% if user_signed_in? %>
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <% unless controller_path == "public/homes" && (action_name == "top" || action_name == "about") %>
              <!-- 検索機能 -->
              <div class="main-title">
                <h4><i class="fa-solid fa-magnifying-glass"></i>検索</h4>
              </div>
              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :query, placeholder: "検索するタスク名を入力", class: "form-input"  %>
                <%= f.submit "検索", class: "submit-btn" %>
              <% end %>
              <p></p>
              <p></p>

              <!-- 作成画面 -->
              <% if user_signed_in? && @new_task.present? %>
                <div class="main-title">
                  <h4><i class="fa-solid fa-file"></i>新規タスク作成</h4>
                </div>
                <p></p>
                <!-- 新規投稿のエラーメッセージ -->
                <% if @new_task.errors.any? %>
                  <div class="new-error-message">
                    <b><%= @new_task.errors.count %>件のエラーがあります。</b>
                    <ul>
                      <% @new_task.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <!-- 投稿フォーム -->
                <%= form_with model: @new_task, local: true do |f| %>
                  <div class="form-field">
                    <b>タスク名</b>
                    <%= f.text_field :title, class: "form-input" %>
                    <b>キーワード</b>
                    <%= f.text_field :keyword1, class: "form-input" %>
                    <%= f.text_field :keyword2, class: "form-input" %>
                    <%= f.text_field :keyword3, class: "form-input" %>
                    <%= f.submit "投稿", class: "submit-btn" %>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <!-- サイドバーここまで -->

          <!-- メインコンテンツ -->
          <div class="col-lg-8">
            <%= yield %>
          </div>
        </div>
      </div>
    
    <!-- ログイン前画面表示 -->
    <% else %>
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <%= yield %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- フッター -->
    <footer>
      <div class='footer'>
        <hr>
        Taskun.<br>
        お問い合わせは、<a href="mailto:koguchi.e915@gmail.com">こちら</a>まで。</p>
      </div>
    </footer>
  </body>
</html>
