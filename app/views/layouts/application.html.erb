<!DOCTYPE html>
<html>
  <head>
    <title>Taskun</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/38dc52f0f7.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">

      <div class="nav">
        <!-- ログイン中ナビゲーション  -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id) do %>
              <i class="fa-solid fa-user"></i> マイページ
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to tasks_path do %>
              <i class="fa-solid fa-list-check"></i> タスク一覧
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= link_to users_path do %>
              <i class="fa-solid fa-users"></i> ユーザー一覧
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i> ログアウト
            <% end %>
          </li>

        <!-- ログイン前ナビゲーション  -->
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path do %>
              <i class="fa-solid fa-right-to-bracket"></i> ログイン
            <% end %>
          </li>
        <% end %>

      </div>
    </header>

    <!-- フラッシュメッセージ  -->
    <% if flash[:notice] %>
      <div class="flash-message notice"><%= flash[:notice] %></div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash-message alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
