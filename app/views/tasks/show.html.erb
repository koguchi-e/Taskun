<h1>タスク詳細画面</h1>

<table>
    <tr>
        <td style="text-align:right; vertical-align: top;">
            <b>投稿したユーザ</b>：
        </td>
        <td>
            <!-- プロフィール画像の表示  -->
            <% if @task.user.image.attached? %>
                <%= image_tag @task.user.image, size: "50x50", alt: "#{@task.user.name}のプロフィール画像" %>
            <% else %>
                <%= image_tag "no_image", size: "50x50", alt: "デフォルトプロフィール画像" %>
            <% end %>
            <%= @task.user.name %>
        </td>
    </tr>
    <tr>
        <td style="text-align:right; vertical-align: top;">
            <b>タスク名</b>：
        </td>
        <td>
            <%= @task.title %>
            <br>
            <%= link_to "編集", edit_task_path(@task.id) %>
            <%= link_to "削除", task_path(@task.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
    </tr>
    <tr>
        <td style="text-align:right; vertical-align: top;">
            <b>キーワード</b>：
        </td>
        <td>
            <%= @task.keyword1 %> / 
            <%= @task.keyword2 %> / 
            <%= @task.keyword3 %>
        </td>
    </tr>
    <tr>
        <td style="text-align:right; vertical-align: top;">
            <b>投稿日時</b>：
        </td>
        <td>
            <%= @task.created_at.strftime('%Y年%m月%d日 %H:%M') %>
        </td>
    </tr>
</table>
