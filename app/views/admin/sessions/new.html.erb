<div class="login-box">
  <div class="main-title">
    <h4><i class="fa-solid fa-right-to-bracket"></i>管理者にログイン</h4>
  </div>

  <div class="detail-results">
    <div class="detail-card">
      <div>
        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを記憶させる %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "submit-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
