<h1>管理者画面（全ユーザ一覧）</h1>
<ul>
    <% @users.each do |user| %>
        <li>
            <% if user.image.attached? %>
                <%= image_tag user.image, size: "50x50" %>
            <% else %>
                <%= image_tag "no_image", size: "50x50" %>
            <% end %> 
            <%= user.name %> ( <%= user.email %> )
            <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？"} %>
        </li>
    <% end %>
</ul>

<%= paginate @users %>