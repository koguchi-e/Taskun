<h4>管理者画面（全ユーザ一覧）</h4>

<%= form_with url: admin_dashboards_search_path, method: :get, local: true do |f| %>
  <%= f.text_field :user_query, placeholder: "検索するユーザ名を入力" %>
  <%= f.submit "ユーザ検索" %>
  <%= f.text_field :task_query, placeholder: "検索するタスク名を入力" %>
  <%= f.submit "タスク検索" %>
<% end %>

<ul>
    <% @users.each do |user| %>
        <li>
            <% if user.image.attached? %>
                <%= image_tag user.image, size: "50x50" %>
            <% else %>
                <%= image_tag "no_image", size: "50x50" %>
            <% end %> 
            <%= user.name %> ( <%= user.email %> )
            <%= link_to "削除", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？"} %>
        </li>
    <% end %>
</ul>

<%= paginate @users %>
